{% extends 'Front/Front.html.twig' %}

{% block content %}

    <div class="content-wrapper">


        <div class="Delicious_area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="section_title text-center mb-50">
                            <h3>Hey "{{ app.user.username|trans({'%username%': app.user.username}, 'FOSUserBundle') }}" voici vos evenements</h3>
                            <a href="{{ path('test')}}" class="button button-contactForm boxed-btn">Afficher Dans Une Calandrier</a>
                            <div class="form-group mt-3">
                            </div>
                        </div>
                    </div>
                </div>


                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                         aria-labelledby="pills-home-tab">
                        <div class="row">


                            {% for evenement in evenements %}


                                <div class="col-lg-6 col-md-6">
                                    <div class="single_delicious d-flex align-items-center">
                                        <div class="thumb">
                                            <img src="{{ asset('uploads/' ~  evenement.image ) }}" width="150"
                                                 height="150">
                                        </div>
                                        <div class="info">
                                            <a class="d-inline-block">
                                                <h2>#{{ evenement.id }}.{{ evenement.nom }}</h2>
                                            </a>
                                            <p>{{ evenement.description }}.</p>
                                            <span>${{ evenement.prix }} <a href="{{ path('inscription_annulerinscrit', { 'id': evenement.id })}}" class="button button-contactForm boxed-btn"> Annuler Participation</a> </span>
                                        </div>
                                    </div>
                                </div>


                            {% endfor %}


                        </div>
                    </div>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(evenements) }}
                </div>
            </div>
        </div>


    </div>





{% endblock %}
