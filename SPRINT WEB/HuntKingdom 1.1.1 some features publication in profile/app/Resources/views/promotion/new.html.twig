{% extends 'Back/Back.html.twig' %}

{% block content %}
    <h1>Promotion creation</h1>

    <a href="{{ path('promotion_index') }}"><button class="btn btn-warning toastsDefaultWarning">Return to Promotion Display</button></a>
    {{ form_start(form) }}

    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Pourcentage de la Promotion</label>
            {{ form_widget(form.pourcentage, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Nom du Produit</label>
            {{ form_widget(form.idProduit, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">date du Debut</label>
            {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">date de Fin</label>
            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
        </div>

    </div>

    <div class="card-footer">
        <input  class="btn btn-primary" type="submit" value="Create" />
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}




{% endblock %}
