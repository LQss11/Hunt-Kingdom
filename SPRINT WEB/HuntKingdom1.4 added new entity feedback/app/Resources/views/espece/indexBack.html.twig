{% extends 'Back/Back.html.twig' %}


{% block content %}
<link rel="stylesheet" href="{{ asset('BackEnd/plugins/datatables-bs4/css/dataTables.bootstrap4.css') }}"
      xmlns="http://www.w3.org/1999/html">
<br>
<center><h1>Liste des Especes</h1></center>
<div class="card-body">

    <a  href="{{ path('espece_new') }}"><button class="btn btn-block bg-gradient-success">Ajouter une Espece</button></a>
    </br>
    <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Id espece</th>
            <th>Nom espece</th>
            <th>Description</th>
            <th>Poids</th>
            <th>Type</th>
            <th>Zone</th>
            <th>Ville</th>
            <th>image</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        </thead>
        <tbody>
        {% for espece in especes %}
            <tr>
                <td>{{ espece.idEspece }}</td>
                <td>{{ espece.nomEspece }}</td>
                <td>{{ espece.descriptionEspece }}</td>
                <td>{{ espece.poids }}</td>
                <td>{{ espece.type }}</td>
                <td>{{ espece.zone }}</td>
                <td>{{ espece.ville }}</td>


                <td><img src="{{ asset('uploads/espece/' ~ espece.image) }}" width="40" height="40"></td>
                <td><a class="btn btn-primary btn-sm" href="{{ path('espece_showBack',{ 'idEspece': espece.idEspece }) }}"><i class="fas fa-folder">
                        </i>show</a></td>
                <td><a class="btn btn-info btn-sm" href="{{ path('espece_edit', { 'idEspece': espece.idEspece }) }}"><i class="fas fa-pencil-alt">
                        </i>edit</a></td>
                <td><a class="btn btn-danger btn-sm" href="{{ path('espece_delete', { 'idEspece': espece.idEspece }) }}">delete</a></td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
