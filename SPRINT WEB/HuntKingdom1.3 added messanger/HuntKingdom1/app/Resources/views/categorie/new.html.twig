{% extends 'Back/Back.html.twig' %}
{% block content %}
    <h1>Categorie creation</h1>

    <a href="{{ path('categorie_index') }}"><button class="btn btn-warning toastsDefaultWarning">Return to Product Display</button></a>
    {{ form_start(form) }}

    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">Name Of The Categorie</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description Of The Categorie</label>
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label for="exampleInputFile">File input</label>
            {{ form_widget(form.image,  {'attr': {'class': 'form-control'}}) }}</label>

        </div>

    </div>
    <div class="card-footer">
        <input  class="btn btn-primary" type="submit" value="Create" />
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}
{% endblock %}
