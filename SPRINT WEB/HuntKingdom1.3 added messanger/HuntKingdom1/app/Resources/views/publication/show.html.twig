{% extends 'Front/Front.html.twig' %}

{% block content %}




    <!--Bloc CSS -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.png"/>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/bootstrap/css/bootstrap.min.css')}}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/fonts/font-awesome-4.7.0/css/font-awesome.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/fonts/themify/themify-icons.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/animate/animate.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/css-hamburgers/hamburgers.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/animsition/css/animsition.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/select2/select2.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/daterangepicker/daterangepicker.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/slick/slick.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/vendor/lightbox2/css/lightbox.min.css') }}">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/css/util.css') }}">

    <link rel="stylesheet" type="text/css" href="{{ asset('Forum/css/main.css') }}">



    <!-- end bloc-->

    <div class="container">


        <div class="album py-5 bg-light">



                <div class="row ">
                    <div class="col-md-8 col-lg-9">
                        <div class="p-t-80 p-b-124 bo5-r p-r-50 h-full p-r-0-md bo-none-md">
                            <!-- Block4 -->
                            <div class="blo4 p-b-63">
                                <!-- - -->
                                <div class="pic-blo4 hov-img-zoom bo-rad-10 pos-relative">
                                    <img src="{{ asset('uploads/' ~ publication.type) }}" width="200" height="200">

                                </div>

                                <!-- - -->
                                <div class="text-blo4 p-t-33">
                                    <h4 class="p-b-16">
                                        <a href="blog-detail.html" class="tit9"></a>
                                    </h4>

                                    <div class="txt32 flex-w p-b-24">
									<span>
										{{ publication.id}}
										<span class="m-r-6 m-l-4">|</span>
									</span>

                                        <span>
										{{ publication.datePublication|date }}

									</span>

                                    </div>

                                    <p class="listing-tagline">{{ publication.contenu|trim }}</p>
                                </div>
                            </div>


                            <!-- Leave a comment -->
                            <form  method="POST" id="comment">
                                <h4 class="txt33 p-b-14">
                                    Leave a Comment
                                </h4>


                                <textarea class="bo-rad-10 size29 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-40" name="commentent" placeholder="Comment..." id="example1"></textarea>



                                <!-- Button3 -->
                                <button type="submit" class="btn3 flex-c-m size31 txt11 trans-0-4">
                                    Post Comment
                                </button>
                            </form>

                            <br><br><br><br>

                            <div class="">
                                <a href="{{ path('publication_index') }}" type="button" class="btn btn-primary btn-lg">Retour à la liste</a>
                                <a href="{{ path('publication_edit',{'id': publication.id}) }}" type="button" class="btn btn-success btn-lg">Modifer</a>
                                <a href="{{ path('publication_delete',{'id': publication.id}) }}" type="button" class="btn btn-danger btn-lg">Supprimer</a>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-4 col-lg-3">
                   <div class="sidebar2 p-t-80 p-b-80 p-l-20 p-l-0-md p-t-0-md">

                        <div class="popular">
                            <h4 class="txt33 p-b-35 p-t-58">
                                Liste des Commentaires
                            </h4>

                            <ul>
                                <li class="flex-w m-b-25">

                                    {% for commentaire in commentaires %}

                                        <div class="size16 bo-rad-10 wrap-pic-w of-hidden m-r-18">
                                            <img src="images/blog-11.jpg" alt="IMG-BLOG">
                                        </div>
                                        <div class="size28">
                                        
                                            <a href="#" class="dis-block txt28 m-b-8">
                                                {{commentaire.idUser.username}}<br>
                                                <p>{{commentaire.contenu}}</p>
                                            </a>

                                            <span class="txt14">
    											{{commentaire.dateComnt|date}}
    										</span>

                                            <a href="{{ path('reclamation_new_object', { 'id': commentaire.id,'type': "commentaire" }) }}">
                                                <i class="material-icons">&#xe001;</i>
                                            </a>

                                        </div>

                                    {% endfor %}

                                </li>
                            </ul>
                        </div>

                    </div>
            </div>

        </div>

    </div>



</div>
{% endblock %}
