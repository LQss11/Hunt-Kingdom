{% extends 'Front/Front.html.twig' %}

{% block content %}

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">


    <div class="w3-container">
        <center><h2>Reclamations</h2></center>

        <table class="w3-table-all">
            <thead>
            <tr class="w3-red">
                <th>Id</th>
                <th>Sujet</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Show</th>
                <th>Edit</th>
            </tr>
            </thead>
            {% for rec in reclamations %}
            {% if id == rec.idU %}
            <tr>
                <td>{{ rec.id }}</td>
                <td>{{ rec.sujet }}</td>
                <td>{{ rec.description }}</td>
                <td>{{ rec.etat }}</td>
                <td><a href="{{ path('reclamation_show', { 'id': rec.id }) }}">show</a></td>
                <td><a href="{{ path('reclamation_edit', { 'id': rec.id }) }}">edit</a></td>
            </tr>
            {% endif %}

            {% endfor %}
        </table>
    </div>



{% endblock %}
