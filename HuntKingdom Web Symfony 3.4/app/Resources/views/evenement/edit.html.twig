{% extends 'Back/Back.html.twig' %}

{% block content %}

    <div class="content-wrapper">


        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Modifier Un Evenement</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Modifier</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">veuillez svp Modifier les donnees </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->


                            {{ form_start(edit_form, {'attr': {'role': 'form'}}) }}
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Nom De L'evenement</label>
                                    {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control','placeholder':'Enter ...'}}) }}
                                </div>


                                <div class="form-group">
                                    <label>Type De L'evenement</label>
                                    <select for="{{ form_widget(edit_form.type, {'attr': {'class': 'form-control'}}) }}">
                                        <option>Formation</option>
                                        <option>Chilling</option>
                                        <option>Hunting in groups</option>
                                    </select>
                                </div>


                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea {{ form_widget(edit_form.description, {'attr': {'class': 'form-control','placeholder':'Enter ...','rows':'3'}}) }}></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Prix</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">$</span>
                                        </div>
                                        {{ form_widget(edit_form.prix, {'attr': {'class': 'form-control','placeholder':'Enter ...','type':'number'}}) }}
                                        <div class="input-group-append">
                                            <span class="input-group-text">.00</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Nombre De Place</label>
                                    {{ form_widget(edit_form.nbrplace, {'attr': {'class': 'form-control','placeholder':'Enter ...','type':'number','min':'0'}}) }}
                                </div>

                                <div class="form-group">
                                    <label>Duree</label>
                                    <div class="input-group">
                                        {{ form_widget(edit_form.duree, {'attr': {'class': 'form-control','placeholder':'Enter ...','type':'number','min':'0'}}) }}
                                        <div class="input-group-append">
                                            <span class="input-group-text">HH</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Place De L'evenement</label>
                                    {{ form_widget(edit_form.place, {'attr': {'class': 'form-control','placeholder':'Enter ...'}}) }}
                                </div>

                                <!-- Date dd/mm/yyyy -->
                                <div class="form-group">
                                    <label>Date De L'evenement</label>

                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                        </div>

                                    </div>
                                    <!-- /.input group -->
                                </div>
                                <!-- /.form group -->

                                <div class="card-footer">
                                    <button type="submit" value="Edit" class="btn btn-primary">Modifier L'evenement
                                    </button>
                                </div>


                                <div class="form-group">
                                    <label for="exampleInputFile">File input</label>
                                    {{ form_widget(edit_form.image,  {'attr': {'class': 'form-control'}}) }}</label>

                                </div>



                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}

